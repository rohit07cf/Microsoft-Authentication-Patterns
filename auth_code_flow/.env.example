# Azure AD App Registration values
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# OAuth redirect URI (must match the one registered in Azure AD)
REDIRECT_URI=http://localhost:8000/callback

# Secret used to sign session cookies (change for production)
SESSION_SECRET=change-me-in-production

# Proactive token refresh settings
# Refresh tokens when they have fewer than this many seconds left (default: 300 = 5 min)
TOKEN_REFRESH_BUFFER_SECS=300
# How often the background task scans the cache in seconds (default: 60)
TOKEN_REFRESH_CHECK_INTERVAL_SECS=60
